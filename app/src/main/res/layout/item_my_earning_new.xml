<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/tvTaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Airtel Payment Bank"
                android:layout_weight="1"
                android:lines="2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="\u20B9 10/Activity"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="3">



            <Button
                android:id="@+id/btnViewSummary"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:backgroundTint="@color/colorsilver"
                android:gravity="center"
                android:text="View Summary"
                android:layout_weight="1"
                android:textAllCaps="false"
               style="@style/ButtonShapeBackground"
                />

            <Button
                android:id="@+id/btnGenerateInvoice"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                style="@style/ButtonShapeBackground"
                android:backgroundTint="@color/colorsilver"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="View Invoice"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>