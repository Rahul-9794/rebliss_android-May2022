<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/full_screen_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activity.DashboardBankDetails"
    tools:showIn="@layout/activity_dashboard_bank">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mywidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="#ff4500"></TextView>

        <LinearLayout android:id="@+id/stepThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/imgSteppOne"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_check_mark" />
                <TextView
                    android:id="@+id/textSteppOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:visibility="gone"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>

            <View
                android:id="@+id/viewSteppOne"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@color/colorWhite"></View>

            <RelativeLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/imgSteppTwo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_check_mark" />
                <TextView    android:id="@+id/textSteppTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2"
                    android:visibility="gone"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
            </RelativeLayout>
            <View
                android:id="@+id/viewSteppTwo"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@color/colorWhite"></View>

            <RelativeLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/imgSteppThree"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_circular_shape_yellow" />

                <TextView
                    android:id="@+id/textSteppThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />
            </RelativeLayout>




        </LinearLayout>






        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:scrollbars="none">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_22sdp"

                app:cardBackgroundColor="@color/white"
                android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_35sdp"
                android:orientation="vertical">

                <LinearLayout android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textBankDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Account Details"
                        android:textColor="@color/colorEditText" />

                    <EditText
                        android:id="@+id/etBankDetail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textAcName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Account Holder Name"
                        android:fontFamily="@font/text_fontmontserrat_medium"

                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/etAcName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rounded_edittext"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textBankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank name"

                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/etBankName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rounded_edittext"

                        android:maxLength="30"
                        android:inputType="textCapCharacters|textCapWords"
                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textAcNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account No."
                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/etAcNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="number"
                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:singleLine="true"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textcAcNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirm Account No."
                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/etcAcNo"
                        android:layout_width="match_parent"

                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="number"
                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:singleLine="true"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textIFSC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IFSC Code"
                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:textColor="@color/colorBlack" />

                    <EditText
                        android:id="@+id/etIFSC"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/rounded_edittext"
                        android:inputType="textCapCharacters"
                        android:textAllCaps="true"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/text_fontmontserrat_medium"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnSave"
                        android:background="@drawable/conner_btn"
                        android:textColor="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"

                        android:fontFamily="@font/text_semibold"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_35sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:text="Save &amp; Continue" />
                </LinearLayout>
            </LinearLayout>

            </androidx.cardview.widget.CardView>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>