                                android:layout_height="@dimen/_24sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_right_arrow"
                                android:visibility="gone" />

                        </RelativeLayout>


                        -

                        <RelativeLayout
                            android:id="@+id/relManagerBankIt"
                            android:layout_width="@dimen/_220sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rounded_green_shape"
                            android:visibility="gone">


                            -

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_centerVertical="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/shop" />

                                <TextView
                                    android:id="@+id/textManageBank"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:text="Bank It "
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_right_arrow"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/relContinueToPayment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/name"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/txtapplicationpendingapproval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="Your application is waiting for approval."
                            android:textSize="@dimen/_16sdp"
                            android:visibility="gone" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_60sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/text_fontmontserrat_medium"
                            android:gravity="center"
                            android:text="Thanks for submitting details"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approvalPending"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/text_fontmontserrat_medium"
                            android:gravity="center"
                            android:text="Your request is under process"
                            android:textSize="@dimen/_20sdp"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/text_fontmontserrat_medium"
                            android:gravity="center"
                            android:text="Kindly pay onboarding subscription amount to continue"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:gravity="center"
                            android:text=" "
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtpaymentAreadydone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/btnContinueToPayment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@drawable/conner_btn"
                            android:fontFamily="@font/text_semibold"
                            android:gravity="center"
                            android:text="Continue to payment"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/fabLayout"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/fab"
