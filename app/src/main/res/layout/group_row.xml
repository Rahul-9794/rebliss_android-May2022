<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_150sdp"
        app:cardCornerRadius="@dimen/_22sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgGroup"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_74sdp"
                android:layout_marginTop="@dimen/_8sdp"
                style="@style/BackgroundColor"
                android:padding="@dimen/_32sdp"
                android:background="@drawable/borderwith_dark_green_noradii"
                app:tint = "@color/black"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/textGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/text_fontmontserrat_medium"
                android:text="Individual"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>