<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"

              tools:showIn="@layout/activity_dashboard_super_cpdetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/BackgroundColor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mywidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:fadingEdge="horizontal"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="#ff4500"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgStepOne"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_circular_shape_yellow"/>

                <TextView
                    android:id="@+id/textStepOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:id="@+id/viewStepOne"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@color/colorWhite"></View>

            <RelativeLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/imgStepTwo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_circular_shape_grey"/>

                <TextView
                    android:id="@+id/textStepTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <View
                android:id="@+id/viewStepTwo"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@color/colorWhite"></View>

            <RelativeLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/imgStepThree"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_circular_shape_grey" />

                <TextView
                    android:id="@+id/textStepThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <View
                android:id="@+id/viewStepThree"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@color/colorWhite"></View>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_35sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textChName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/channel_partner_name"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etChName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:enabled="false"
                        android:inputType="textCapWords"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lNameLi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textChLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/channel_partner_l_name"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etChLName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:enabled="false"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_no"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:enabled="false"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textDOB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/colorEditText"
                        android:visibility="gone"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etFirstNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/imgCal"
                        app:passwordToggleEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDOB"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:editable="false"
                            android:enabled="false"
                            android:inputType="text"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/colorMegentaText"
                            android:textColorHint="@color/colorTextHint"
                            android:textSize="@dimen/_12sdp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/imgCal"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_icon_calender"
                        app:tint="@color/black" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorEditText"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textLandline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/landline_no"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etLandline"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:maxLength="11"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textpersonalEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/personal_mail_id"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etpersonalEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:hint=""
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textOfficialEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/official_mail_id"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etOfficialEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textFirmName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/channel_partner_firm_name"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etFirmName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textBusinessNature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nature of Business *"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etBusinessNature"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone"/>

                    <Spinner
                        android:id="@+id/spBusinessNature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>

                    <AutoCompleteTextView
                        android:id="@+id/actvBusinessNature"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnAddNrtBsns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/addtextBusinessNature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Nature of Business *"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/addBusinessNature"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textfirmType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Firm Type"
                        android:textColor="@color/colorEditText"/>

                    <Spinner
                        android:id="@+id/spFirmType"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"></Spinner>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textManpower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Manpower Strength"
                        android:textColor="@color/colorEditText"/>

                    <EditText
                        android:id="@+id/etManpower"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@android:color/transparent"
                        android:inputType="number"

                        android:padding="@dimen/_3sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorMegentaText"
                        android:textSize="@dimen/_12sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditText"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textCommunicationAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/communication_address"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="2"
                            android:orientation="vertical">


                            <EditText
                                android:id="@+id/etCommunicationPIN"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@android:color/transparent"

                                android:inputType="number"
                                android:maxLength="6"
                                android:padding="@dimen/_3sdp"
                                android:singleLine="true"
                                android:textColor="@color/colorMegentaText"
                                android:textSize="@dimen/_12sdp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorEditText"></View>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:visibility="gone">

                            <Button
                                android:id="@+id/findPin"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                style="@style/ButtonColor"
                                android:text="Find" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/etCommunicationState"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"></Spinner>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorEditText"></View>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/etCommunicationCity"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"/>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorEditText"></View>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etCommunicationAddress"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@android:color/transparent"
                                android:inputType="textCapWords"
                                android:padding="@dimen/_3sdp"
                                android:singleLine="true"
                                android:textColor="@color/colorMegentaText"
                                android:textSize="@dimen/_12sdp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorEditText"></View>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etCommunicationDistrict"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@android:color/transparent"
                                android:inputType="textCapWords"
                                android:padding="@dimen/_3sdp"
                                android:singleLine="true"
                                android:textColor="@color/colorMegentaText"
                                android:textSize="@dimen/_12sdp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorEditText"></View>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etCommunicationLandmark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@android:color/transparent"
                                android:inputType="textCapWords"
                                android:padding="@dimen/_3sdp"
                                android:singleLine="true"
                                android:textColor="@color/colorMegentaText"
                                android:textSize="@dimen/_12sdp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorEditText"></View>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textBusinessAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bussiness_address"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:id="@+id/liRadio"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/radioBusiness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:clickable="false"
                            android:text="Same as Above"
                            android:textColor="@color/dracula_primary_dark"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etBusinessPIN"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@android:color/transparent"

                                    android:inputType="number"
                                    android:maxLength="6"
                                    android:padding="@dimen/_3sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorMegentaText"
                                    android:textSize="@dimen/_12sdp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorEditText"></View>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="8"
                                android:gravity="bottom"
                                android:visibility="gone"
                                >

                                <Button
                                    android:id="@+id/findBusinessPin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_gravity="center"
                                    android:background="@color/colorMegentaText"
                                    android:gravity="center"
                                    android:text="Find"
                                    android:textColor="@color/colorWhite"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/etBusinessState"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorEditText"></View>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/etBusinessCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"/>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorEditText"></View>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etBusinessAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:background="@android:color/transparent"
                                    android:inputType="textCapWords"
                                    android:padding="@dimen/_3sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorMegentaText"
                                    android:textSize="@dimen/_12sdp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorEditText"></View>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etBusinessDistrict"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@android:color/transparent"
                                android:inputType="textCapWords"
                                android:padding="@dimen/_3sdp"
                                android:singleLine="true"
                                android:textColor="@color/colorMegentaText"
                                android:textSize="@dimen/_12sdp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorEditText"></View>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etBusinessLandmark"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@android:color/transparent"
                                android:inputType="textCapWords"
                                android:padding="@dimen/_3sdp"
                                android:singleLine="true"
                                android:textColor="@color/colorMegentaText"
                                android:textSize="@dimen/_12sdp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorEditText"></View>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_35sdp"
                        style="@style/ButtonShapeBackground"
                        android:text="Save &amp; Continue" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>